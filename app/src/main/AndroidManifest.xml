<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dott">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name="com.example.dott.application.DottApplication"
        android:fullBackupOnly="true"
        android:icon="@mipmap/dott_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dott_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dott">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyANXOqfCorDtaKkuqxbLGWyKHudKKX7gWU" />

        <activity
            android:name=".ItemDetailHostActivity"
            android:exported="true"
            android:screenOrientation="locked"
            android:label="@string/app_name"
            android:resizeableActivity="true"
            tools:targetApi="24">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>